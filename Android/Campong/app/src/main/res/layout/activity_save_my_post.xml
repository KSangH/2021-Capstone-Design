<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SaveMyPostActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/saveposttoolbar"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/white"
                app:contentInsetStart="0dp"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="#00FFFFFF"
                        app:srcCompat="@drawable/ic_arrow" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="장비 등록"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/saveposttoolbar">

                <ImageButton
                    android:id="@+id/button3"
                    android:layout_width="400dp"
                    android:layout_height="220dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/image_button"
                    android:backgroundTint="#818181"
                    android:src="@drawable/ic_add"></ImageButton>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/button3"
                    android:layout_marginHorizontal="30dp">

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:id="@+id/chip1"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="텐트"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        app:textEndPadding="15dp"
                        app:textStartPadding="15dp" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:id="@+id/chip2"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="카테고리 2"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        app:textEndPadding="15dp"
                        app:textStartPadding="15dp" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:id="@+id/chip3"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="카테고리 3"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        app:textEndPadding="15dp"
                        app:textStartPadding="15dp" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:id="@+id/chip4"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="기타등등 장비"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        app:textEndPadding="15dp"
                        app:textStartPadding="15dp" />

                </com.google.android.material.chip.ChipGroup>

                <EditText
                    android:id="@+id/edit_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/chip_group"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_box"
                    android:hint="제목을 입력하세요"
                    android:padding="10dp"
                    android:textColorHint="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_content"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/edit_title"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_text_box"
                    android:gravity="top"
                    android:hint="내용을 입력하세요"
                    android:padding="10dp"
                    android:textColorHint="@color/black"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/edit_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edit_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_text_box"
                    android:hint="거래할 위치를 입력하세요"
                    android:padding="10dp"
                    android:textColorHint="@color/black"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/edit_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edit_location"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edit_text_box"
                    android:hint="가격을 입력하세요"
                    android:padding="10dp"
                    android:textColorHint="@color/black"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/SaveButton1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edit_price"
                    android:layout_margin="40dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/button_main_color"
                    android:text="저장하기"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:backgroundTint="@null" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>